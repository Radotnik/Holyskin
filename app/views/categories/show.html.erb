<!-- app/views/articles/show.html.erb -->
<% #= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>

<div>
  <h1><%= @category.title %></h1>
</div>

<div>
  <span><%= "You haven't uploaded any progress trackers with pictures yet!" if @trackers.empty? %></span>
  <div>
    <%= link_to "New progress tracker", new_treatment_tracker_path({
      treatment_id: @treatment.id,
      category_id: @category.id,
      group: @category.group
    }) %>
  </div>

  <div>
    <% @trackers.each do |tracker| %>
      <div>
        <%= cl_image_tag tracker.photo.key, height: 300, width: 400, crop: :fill %>
      </div>
    <% end %>
  </div>

  <div>
    <% @trackers.each do |tracker| %>
      <div>
        <strong><%= tracker.%></strong>
      </div>
    <% end %>
  </div>
</div>


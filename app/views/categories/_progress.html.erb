<div>
  <h1><%= category.title %></h1>
</div>
<div>
  <span><%= "You haven’t uploaded any progress trackers with pictures yet!" if trackers.empty? %></span>
  <div>
    <%= link_to "New progress tracker", new_treatment_tracker_path({
      treatment_id: treatment.id,
      category_id: category.id,
      group: category.group
    }) %>
  </div>
</div>
<div class=“card-tracker-infos-details”>
    <div class="container">
      <% unless tracker_progress.photos.blank? %>
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner carousel-height"  style="height: 400px; margin-top: 100px;">
              <%= tracker_progress.photos.each do |photo| %>
              <div class="carousel-item active">
                <%= cl_image_tag photo.key, height: 300, crop: :fill, class: "d-block w-100" %>
              </div>
              <% end %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
      </div>
      <% end %>
      <% trackers.each do |tracker| %>
        <div>
        <p><b><%= tracker.category.title %> | <%= tracker.category.group %></b></p>
        <p>rating: <%= tracker.rating %></p>
        <p><%= tracker.notes%> </p>
        </div>
      <% end %>
    </div>
</div>






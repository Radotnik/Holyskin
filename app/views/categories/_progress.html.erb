<!-- Slider main container -->
<!-- Swiper -->
    <div class="swiper-container mySwiper">
      <div class="swiper-wrapper">
        <% trackers.each do |tracker| %>
          <div class="swiper-slide swiper-card">
            <%= cl_image_tag tracker.photo.key, height: "100%", class: "carousel-image"%>

            <div><br></div>

            <div class="card-tracker-infos-details" id="progress">
              <p><b><%= tracker.created_at.strftime("%-d %B %Y") %></b></p>
              <p>rating: <%= tracker.rating %></p>
              <p><%= tracker.notes%> </p>
            </div>
          </div>
        <% end %>

      </div>
      <div class="swiper-pagination"></div>
    </div>







<div>
  <h1><%= category.title %></h1>
</div>
<div>
  <h5><span><%= "You haven’t uploaded any progress trackers with pictures yet!" if trackers.empty? %></span></h5>
  <div>
    <%= link_to "New progress tracker", new_treatment_tracker_path({
      treatment_id: treatment.id,
      category_id: category.id,
      group: category.group
    }) %>
  </div>
</div>
<div class=“card-tracker-infos-details”>
    <div class="container">
      <% unless tracker_progress.photo.blank? %>
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner carousel-height"  style="height: 400px; margin-top: 100px;">
              <% trackers.each do |tracker| %>
              <div class="carousel-item">
                <%= cl_image_tag tracker.photo.key, height: 300, crop: :fill, class: "d-block w-100" %>
              </div>

              <% end %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
      </div>
      <% end %>
    </div>
</div>






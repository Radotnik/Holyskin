<h1 style="margin-top: -40px; margin-bottom: 1.5rem;"> Add new treatment </h1>
<div class="form-treatment" id="form-font">
  <p>
    <%= simple_form_for(@treatment) do |f| %>
      <%= f.input :skin_condition %>
      <%= f.input :start_date %>
      <%#= f.input :diable_end_date, label: false do %>
       <%= label_tag "ongoing" %>
        <%= check_box_tag :disable_end_date %>
      <%= f.input :end_date %>
      <%= f.input :status, as: :select, collection: ["start", "in progress", "end"], placeholder: 'Select Status', label: "Select Status" %>
      <%= f.button :submit, id: "treatment-button"%>
    <% end %>
  </p>
</div>
